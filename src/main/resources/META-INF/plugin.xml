<idea-plugin>
    <id>org.example.focus-lens</id>
    <name>Focus Lens</name>
    <vendor email="tobola.jan@gmail.com" url="http://www.monnage.com/oss">monnage</vendor>

    <description>Focus Lens to focus on particular folders.</description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <treeStructureProvider implementation="FocusLensFilter"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>